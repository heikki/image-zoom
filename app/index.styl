body
	font-family: Helvetica
	background: #f4f4f7
	color: #444
	margin: 0
	padding: 2rem 3rem
	font-size: 0.9rem

small
	color: #999

.zoom-box
	width: 30rem
	overflow: hidden
	box-sizing: border-box
	border: 1px solid #999
	background: #000

	&:-webkit-full-screen
		width: 100%
		height: 100%
		border: none

	.zoom-box-content
		display: inline-block
		font-size: 0
